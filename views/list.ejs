<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo Lists</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

    <div class="box" id="heading">
        <h1><%= listTitle  %></h1>
    </div>

    <div class="box">
        
        <!-- <% for ( i= 0; i<newItem.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= newItem[i].name %></p>
        </div>
        <% } %> -->

        <% newItem.forEach(function(singleItem) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" value="<%=singleItem._id%>" type="checkbox" onchange="this.form.submit()">
                    <p><%= singleItem.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
       <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="new items" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>

    </div>

</body>
</html>